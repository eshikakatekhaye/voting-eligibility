//Voting Eligibility
#include<iostream>
using namespace std;
int main()
{
    int age;
    cout<<"Enter age of user: ";
    cin>>age;

    if(age>=18)
    {
        cout<<"\nThe user is eligible for voting.";
    }
    else
    {
        cout<<"\nThe user is not eligible for voting.";
        cout<<"\nThe user can vote after "<<18-age<<" year(s).";
    }
    return 0;
}
